<!DOCTYPE html>
<html>
<head>
  <title>TTS Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" %>
  <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" %>

  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">	
						<%= link_to 'TTS Blog', root_path, class: "navbar-brand" %>
				</div>

		<% if user_signed_in? %>
				<ul class="nav navbar-nav">
					<li><%= link_to 'My Posts', user_posts_path(user_id: current_user.id) %></li>
				</ul>

				<ul class="nav navbar-nav navbar-right">
					<li><p class="navbar-text">Welcome, <%= current_user.email %></p></li>
					<li><%= button_to 'Sign Out', destroy_user_session_path, method: :delete, type: "button", class: "btn btn-default navbar-btn" %></li>
				</ul>
		<% end %>
			</div>
	</nav>

	<div class="container">
			<%= yield %>
	</div>
</body>
</html>
